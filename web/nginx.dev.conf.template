
server {
    listen ${WEB_SERVER_PORT};

    location / {
        proxy_pass http://web:${WEB_APP_PORT}/;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }

    location /api/ {
        proxy_pass http://api:${API_PORT}/;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}